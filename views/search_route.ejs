          <th> Origin </th>
          <th> Destination </th>
          <th> Cost </th>
          <th> Date </th>
          <th> Signup Ride </th> <!-- Render buttons for one click signup -->
      </tr>
      </thead>
      <tbody id="tbody">
        <% for (var i = 0; i < closeRoutes.length; i++) { %>
          <tr class="riderElement riderElement-inverse clickable">
              <td> <%= i+1 %> </td>
              <td> <%= closeRoutes[i].driver %> </td>
              <td> <%= closeRoutes[i].origin %> </td>
              <td> <%= closeRoutes[i].destination %> </td>
              <td> <%= closeRoutes[i].inconvenience %> </td>
              <td> <%= closeRoutes[i].date.getMonth()+1 +  '/' + closeRoutes[i].date.getDate() %> </td>
              <td> <button type="button" class="btn btn-success"> Signup </button> </td>
          </tr>
        <% } %>
