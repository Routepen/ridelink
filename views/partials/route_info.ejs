<!--Rider view, use ejs to check if their facebook credentials is the original Facebook user or not-->
<div class="col-md-4" >
    <div >
        <h2>
            <%= routeData.driver.facebook.name.split(' ')[0] %>'s Route
        </h2>
        <form class="row" action="rider"></form>

        <form action="/route/addrider" method="post">
          <span> <i class="material-icons">place</i> </span> <input id="pac-input" name="address" class="controls" autofocus="autofocus" type="text" placeholder="Enter dropoff address..." onPaste="" onkeydown="if (event.keyCode == 13) { return false;}">
          <br><br>
          <input type="hidden" name="routeId" value="<%= routeId %>">
          <button>Confirm</button>
        </form>
        <hr>
        <i class="material-icons" style="font-size:18px">my_location</i> <span id="originText" style="font-size:18px"> <%= routeData.origin %> </span><br/>
        <i class="material-icons" style="font-size:18px">arrow_downward</i><br>
        <i class="material-icons" style="font-size:18px">place</i><span id="destinationText" style="font-size:18px"> <%= routeData.destination %>  </span><br><br>
        <i class="material-icons" style="font-size:18px">event_seat</i><span style="font-size:18px"> Seats left: <bold> <%= routeData.seats - routeData.confirmedRiders.length %> </bold> </span><br>
        <i class="material-icons" style="font-size:18px">event</i><span style="font-size:18px"> <%= (routeData.date.getMonth() + 1) + '/' + routeData.date.getDate() + '/' +  routeData.date.getFullYear() %></span>

        <br><br>
        <div class="container-fluid row">
            <table class="table table-striped table-hover ">
                <thead>
                <tr>
                    <th>#</th>
                    <th> Rider </th>
                    <th> Inconvenience cost </th>
                    <th> Confirmed </th>
                </tr>
                </thead>
                <tbody id="riderTable"></tbody>
            </table>
        </div>
    </div>
</div>
