        //   }
        //   else if (s < 12) { toSet += " AM"; }
        //   else if (s == 12) { toSet += " PM"; }
        //   else {
        //     if (parts.length > 1) {
        //         toSet = (s-12) + ":" + parts[1] + " PM";
        //     }
        //   }
        // }
      }

      span.html(toSet);
      textDiv.show();
      editableDiv.hide();

